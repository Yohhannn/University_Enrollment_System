@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CTU Login Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #fff8f0;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            margin-top: 60px;
            max-width: 450px;
            background-color: white;
            padding: 35px 30px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(255, 140, 0, 0.2);
        }

        .login-header {
            color: #e65c00;
            font-weight: 700;
        }

        .btn-ctu {
            background-color: #e65c00;
            border-color: #e65c00;
            color: white;
        }

        .btn-ctu:hover {
            background-color: #cc5200;
            border-color: #cc5200;
        }

        .form-label {
            color: #333;
        }

        .form-control:focus {
            border-color: #e65c00;
            box-shadow: 0 0 0 0.2rem rgba(230, 92, 0, 0.25);
        }

        .forgot-link {
            font-size: 0.9rem;
            color: #e65c00;
        }

        .forgot-link:hover {
            color: #cc5200;
        }

        .ctu-logo {
            width: 80px;
            height: auto;
            margin-bottom: 15px;
        }

        footer {
            text-align: center;
            margin-top: 30px;
            font-size: 0.85rem;
            color: #888;
        }
    </style>
</head>
<body>

<div class="container d-flex justify-content-center align-items-center flex-column vh-100">
    <div class="login-container text-center">

        <img src="https://upload.wikimedia.org/wikipedia/en/thumb/4/47/Cebu_Technological_University_Logo.png/220px-Cebu_Technological_University_Logo.png" alt="CTU Logo" class="ctu-logo" />

        <h3 class="login-header mb-1">Cebu Technological University</h3>
        <p class="mb-4 text-muted">Student and Faculty Login Portal</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="mb-3 text-start">
                @Html.Label("User ID or Email", htmlAttributes: new { @class = "form-label" })
                @Html.TextBox("UserIdOrEmail", null, new { @class = "form-control", placeholder = "Enter your User ID or Email", required = "required" })
            </div>

            <div class="mb-3 text-start">
                @Html.Label("Password", htmlAttributes: new { @class = "form-label" })
                @Html.Password("Password", null, new { @class = "form-control", placeholder = "Enter your password", required = "required" })
            </div>

            <button type="submit" class="btn btn-ctu w-100 mb-2">Login</button>
        }

        <a href="#" class="forgot-link">Forgot password?</a>
    </div>

    <footer class="mt-4">
        &copy; 2025 <a href="https://www.ctu.edu.ph" target="_blank" style="color:#e65c00; text-decoration: none;">Cebu Technological University</a>.
        All rights reserved.
        <br />
        Powered by <strong>ctu.edu.ph</strong> | Developed by BSIT II-B
    </footer>
</div>

</body>
</html>
